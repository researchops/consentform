{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('questions-1.title') }}</h1>
    <p>{{ __('questions-1.intro') }}</p>
    <div>
        <form method="post" class="form">

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <h2>{{ __('contactInfo.title') }}</h2>

            {{ textInput('researcher_name', 'form.researcher_name') }}
            {{ textInput('researcher_phone', 'form.researcher_phone') }}
            {{ textInput('researcher_email', 'form.researcher_email') }}
            {{ textInput('researcher_org', 'form.researcher_org') }}


            <h2>{{ __('testInfo.title') }}</h2>

            <div class="toggle-area">
                {{ radioButtons('is_with_partner_dept', { 'on':'Yes','off':'No'}, data.is_with_partner, 'form.is_with_partner_dept', errors) }}
            </div>
            <div class="is_with_partner_dept-toggled" style="display:none" >
                {{ textInput('partner_name_dept', 'form.partner_name_dept', { hint: 'form.partner_name_dept.desc' }) }}
                {# {{ textInput('partner_department_acronym', 'form.partner_department_acronym') }} #}
                {{ textInput('partner_department_authority', 'form.partner_department_authority', { hint: 'form.partner_department_authority.desc' }) }}
            </div>

            {{ radioButtons('research_method', { '1':'Interview','2':'Usability testing', '3':'Focus Group','4':'Diary Study'}, data.research_method, 'form.research_method', errors) }}

            {{ textArea('research_goal', 'form.research_goal', {hint: 'form.research_goal.desc'}) }}
            {{ textArea('session_activity', 'form.session_activity', {hint: 'form.session_activity.desc'}) }}

            {{ textInput('session_duration', 'form.session_duration', {hint: 'form.session_duration.desc'}) }}

            {{ textArea('personal_information_collected', 'form.personal_information_collected', {hint: 'form.personal_information_collected.desc'}) }}
            
            <h2>{{ __('compensation.title') }}</h2>
            
            <div class="toggle-area">
                {{ radioButtons('compensation', { 'on':'Yes','off':'No'}, data.compensation, 'form.compensation', errors) }}
            </div>
            <div class="compensation-toggled" style="display:none" >
                {{ radioButtons('compensation_method', { '1':'Gift card','2':'Cash', '3':'Merchandise','4':'Combination','5':'Other'}, data.compensation_method, 'form.compensation_method', errors) }}
                {{ textInput('compensation_name', 'form.compensation_name', { hint: 'form.compensation_name.desc' }) }}
            </div>
        

            <h2>{{ __('privacy.title') }}</h2>
            
            <div class="toggle-area">
            {{ radioButtons('confidentiality', { 'off-1':'form.anonymized','off-2':'form.anonymous','off-3':'form.confidential','on-1':'form.not_confidential','on-2':'form.public'}, data.confidentiality, 'form.confidentiality', errors) }}
            </div>
            <div class="confidentiality-toggled" style="display:none" >
                {{ textArea('personal_information_disclosed_to_public', 'form.personal_information_disclosed_to_public', {hint: 'form.personal_information_disclosed_to_public.desc'}) }}
            </div>

            {# <div class="toggle-area">
                {{ radioButtons('administrative_decision', { 'on':'Yes','off':'No'}, data.administrative_decision, 'form.administrative_decision', errors) }}
            </div>
            <div class="administrative_decision-toggled" style="display:none" >
                {{ textArea('administrative_purpose', 'form.administrative_purpose', {hint: 'form.administrative_purpose.desc'}) }}
            </div> #}

            {{ radioButtons('consent', { '1':'Verbally','2':'On paper'}, data.consent, 'form.consent', errors) }}

            {# {{ radioButtons('is_business', { '1':'Yes','2':'No'}, data.is_business, 'form.is_business', errors, {hint: 'form.is_business.desc'}) }} #}

            <div class="toggle-area">
                {{ radioButtons('recording_type', { 'on-1':'Video and audio','on-2':'Audio only','on-3':'Screen recording with audio','off-1':'Screen recording only','off-2':'No recording'}, data.recording_type, 'form.recording_type', errors) }}
            </div>
            <div class="recording_type-toggled" style="display:none" >
                <div class="toggle-area">
                    {{ radioButtons('will_the_recording_be_disclosed_dept', { 'on':'Yes','off':'No'}, data.consent, 'form.will_the_recording_be_disclosed_dept', errors) }}
                </div>
                <div class="will_the_recording_be_disclosed-toggled" style="display:none" >
                    {{ textArea('purposes_for_which_the_recording_may_be_disclosed_dept', 'form.purposes_for_which_the_recording_may_be_disclosed_dept', {hint: 'form.purposes_for_which_the_recording_may_be_disclosed_dept.desc'}) }}
                </div>
            </div>
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
